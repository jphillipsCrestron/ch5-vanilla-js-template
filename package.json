{
  "name": "ch5-vanilla-js-template",
  "private": true,
  "version": "1.0.4",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build:dev": "vite build --mode development",
    "build:prod": "vite build --mode production",
    "preview": "vite preview",
    "archive": "ch5-cli archive -p ch5-vanilla-js-template -d dist -o archive -c ./contracts/output/ContractExample/interface/mapping/ContractExample.cse2j",
    "deploy:mobile": "ch5-cli deploy -p -H 0.0.0.0 -t mobile archive/ch5-vanilla-js-template.ch5z",
    "deploy:xpanel": "ch5-cli deploy -p -H 0.0.0.0 -t web archive/ch5-vanilla-js-template.ch5z",
    "deploy:panel": "ch5-cli deploy -p -H 0.0.0.0 -t touchscreen archive/ch5-vanilla-js-template.ch5z --slow-mode"
  },
  "devDependencies": {
    "@crestron/ch5-shell-utilities-cli": "^2.11.2",
    "@crestron/ch5-utilities-cli": "^2.0.0",
    "vite": "^6.1.0",
    "vite-plugin-singlefile": "^2.1.0",
    "vite-plugin-static-copy": "^2.2.0"
  },
  "dependencies": {
    "@crestron/ch5-crcomlib": "^2.11.2",
    "@crestron/ch5-webxpanel": "^2.8.0",
    "eruda": "^3.4.1"
  }
}
